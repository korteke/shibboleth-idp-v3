<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
    default-init-method="initialize"
    default-destroy-method="destroy">

    <bean class="net.shibboleth.idp.profile.impl.ProfileActionBeanFactoryPostProcessor" />

    <bean
        id="MockIdPActionWithoutScopeProperty"
        class="net.shibboleth.idp.profile.impl.ProfileActionBeanFactoryPostProcessorTest$MockIdPAction" />

    <bean
        id="MockPrototypeAnnotatedIdPActionWithoutScopeProperty"
        class="net.shibboleth.idp.profile.impl.ProfileActionBeanFactoryPostProcessorTest$MockPrototypeAnnotatedIdPAction" />

    <bean
        id="MockOpenSAMLActionWithoutScopeProperty"
        class="net.shibboleth.idp.profile.impl.ProfileActionBeanFactoryPostProcessorTest$MockOpenSAMLAction" />

    <bean
        id="MockPrototypeAnnotatedOpenSAMLActionWithoutScopeProperty"
        class="net.shibboleth.idp.profile.impl.ProfileActionBeanFactoryPostProcessorTest$MockPrototypeAnnotatedOpenSAMLAction" />

</beans>
